<div class="row" id="bikes-container">
  <% @bikes.each do |bike| %>
    <div class="col col-default-12 col-sm-12 col-md-6 col-lg-4 mt-3 mb-3">
      <div class="card" id="bike-card">
      <%= link_to bike_path(bike) do %>
        <div class="bike-card-image">
          <% if bike.photos.attached? %>
            <%= cl_image_tag bike.photos.first.key, class:"" %>
          <% else %>
            <%= image_tag "bike_default.png", class:""%>
          <% end %>
        </div>
      <% end %>
        <div class="bike-card-body">
          <div class="bike-card-title">
              <h6><%= bike.location %></h5>
              <h6><%= bike.category %></h6>
          </div>
          <div class="bike-card-details">
            <p class="card-text bike-condition"> <% bike.condition.to_i.times do %>
              <i class='fa-solid fa-star' style='color: #FFD43B;'></i>
              <% end %>
            </p>
            <p class="card-text"><%= number_to_currency(bike.price_per_day, unit: "Â£") %> per day</p>
          </div>
          <div class="green-button">
            <%= link_to 'Book', new_bike_booking_path(bike) %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
